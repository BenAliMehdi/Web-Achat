@model IEnumerable<WebAchat.Models.Product>
@{
    ViewData["Title"] = "Add Products to Purchase Order";
}

<h2>Select Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>
                    <form asp-action="AddProduct" method="post">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <input type="number" name="quantity" value="1" min="1" class="form-control-sm" />
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Review" class="btn btn-success">Review Order</a>
</div>